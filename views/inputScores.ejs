<%- include("partials/header") %>

<div class="jumbotron">
  <h1>Admin Console</h1>
</div>

<div class="container text-center">
  <h3>Input scores here:</h3>
  <% if(submit){ %>
    <h3 id="submit">New Score Submitted!</h3>
  <% } %>  
  <div class="container d-flex text-right">
    <form class="w-100" action="/input-scores" method="POST" id="scoreForm">
      <div class="form-group row justify-content-center">
        <label for="episode" class="col-form-label col-md-3">Episode</label>
        <div class="col-md-2">
          <select class="form-control" id="episode" name="episode">
            <% for (let ep = 1; ep <= 10; ep++) { %>
            <option><%= ep %></option>
            <% }; %>
          </select>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <label for="baker" class="col-form-label col-md-3">Baker</label>
        <div class="col-md-2">
          <select class="form-control" id="baker" name="baker">
            <% allBakers.forEach(function(baker) { %>
            <option><%= baker.name %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <% score[0].scores.forEach(function(cat) { %>
      <div class="form-group row justify-content-center">
        <label for="<%- cat.category%>" class="col-form-label col-md-3"><%= cat.category %></label>
        <div class="col-md-2">
          <input type="number" step="any" class="form-control" value=0 id="<%- cat.category%>" name="<%- cat.category%>" placeholder="score">
        </div>
      </div>
      <% }); %>
    </div>
    <div class="form-group row justify-content-center">
      <div class="col-sm-10 text-center">
        <button type="submit" class="btn btn-primary">Submit Scores</button>
      </div>
    </div>
  </form>

</div>
</div>

<%- include("partials/footer") %>
